{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "extendedDiagnostics": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES6",
    },
    "include": [
        "src"
    ],
    "exclude": []
}